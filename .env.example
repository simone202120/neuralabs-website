# ============================================
# NEURALABS WEBSITE - Environment Variables
# ============================================
# Copy this file to .env.local and fill in your values
# Never commit .env.local to version control!

# --------------------------------------------
# SUPABASE
# --------------------------------------------
# Get these from: https://supabase.com/dashboard/project/YOUR_PROJECT/settings/api

NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key

# Service role key - NEVER expose to client
# Used for admin operations in API routes
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# --------------------------------------------
# SANITY CMS
# --------------------------------------------
# Get these from: https://www.sanity.io/manage

NEXT_PUBLIC_SANITY_PROJECT_ID=your-project-id
NEXT_PUBLIC_SANITY_DATASET=production

# API token for server-side operations
# Create at: Sanity Dashboard > API > Tokens
SANITY_API_TOKEN=your-api-token

# --------------------------------------------
# CLAUDE AI (Anthropic)
# --------------------------------------------
# Get from: https://console.anthropic.com/

CLAUDE_API_KEY=sk-ant-your-key

# --------------------------------------------
# RESEND (Email)
# --------------------------------------------
# Get from: https://resend.com/api-keys

RESEND_API_KEY=re_your-key

# --------------------------------------------
# APP CONFIGURATION
# --------------------------------------------

# Public URL of your site (without trailing slash)
NEXT_PUBLIC_SITE_URL=http://localhost:3000

# Admin email for notifications
ADMIN_EMAIL=ciao@neuralabs.it

# --------------------------------------------
# OPTIONAL: Analytics & Monitoring
# --------------------------------------------

# Sentry DSN for error tracking
# SENTRY_DSN=https://xxx@sentry.io/xxx

# Plausible domain (if using Plausible analytics)
# NEXT_PUBLIC_PLAUSIBLE_DOMAIN=neuralabs.it

# --------------------------------------------
# DEVELOPMENT ONLY
# --------------------------------------------

# Enable debug mode
# DEBUG=true

# Skip email sending in development
# SKIP_EMAILS=true
